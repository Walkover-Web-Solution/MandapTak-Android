<com.sothree.slidinguppanel.SlidingUpPanelLayout
    android:id="@+id/sliding_panel"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom"
    sothree:umanoOverlay="true"
    sothree:umanoPanelHeight="48dp"
    sothree:umanoParalaxOffset="?actionBarSize"
    sothree:umanoShadowHeight="0dp"
    tools:context="com.mandaptak.android.Main.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/background_photo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:scaleType="centerCrop"/>

        <com.mandaptak.android.Views.BlurringView
            android:id="@+id/blurring_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:blurRadius="12"
            app:downsampleFactor="3"
            app:overlayColor="#22000000"/>

        <com.mandaptak.android.Views.CircleImageView
            android:id="@+id/front_photo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_above="@+id/bottom_layout"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:layout_marginBottom="24dp"
            app:border_color="@color/white"
            app:border_overlay="true"
            app:border_width="2dp"/>

        <LinearLayout
            android:id="@+id/bottom_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center|bottom"
            android:orientation="vertical"
            android:paddingBottom="122dp">

            <TextView
                android:id="@+id/front_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:paddingTop="4dp"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/front_height"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/front_religion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/front_designation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="4dp"
                android:textColor="@color/white"
                android:textSize="18sp"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/pin_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/toolbar"
            android:clickable="true"
            android:padding="16dp"
            android:src="@drawable/ic_pin"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="52dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/undo_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:src="@drawable/ic_undo"/>

            <ImageView
                android:id="@+id/like_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:src="@drawable/ic_like"/>

            <ImageView
                android:id="@+id/skip_button"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:clickable="true"
                android:src="@drawable/ic_dislike"/>
        </LinearLayout>

        <com.skyfishjy.library.RippleBackground
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:clickable="true"
            app:rb_color="@color/red_200"
            app:rb_duration="3000"
            app:rb_radius="60dp"
            app:rb_rippleAmount="2"
            app:rb_scale="3"
            app:rb_strokeWidth="2dp"
            app:rb_type="fillRipple">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.mandaptak.android.Views.CircleImageView
                    android:id="@+id/loading_profile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_centerInParent="true"
                    app:border_color="@color/red_500"
                    app:border_overlay="true"
                    app:border_width="2dp"/>

                <TextView
                    android:id="@+id/label_loading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/loading_profile"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32dp"
                    android:textColor="@color/red_700"
                    android:textSize="@dimen/abc_text_size_medium_material"/>
            </RelativeLayout>
        </com.skyfishjy.library.RippleBackground>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            style="@style/Widget.MyApp.ActionBar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_alignParentTop="true"
            android:background="@color/transparent_black"
            android:minHeight="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/sliding_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent_black">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|top"
                    android:layout_toLeftOf="@+id/slide_like"
                    android:orientation="vertical"
                    android:paddingBottom="12dp">

                    <TextView
                        android:id="@+id/slide_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="16dp"
                        android:ellipsize="end"
                        android:paddingTop="8dp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/abc_text_size_title_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/slide_height"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/slide_religion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/slide_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:id="@+id/slide_traits_match"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|left"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="16dp"
                        android:textColor="@color/teal_600"
                        android:textSize="18sp"
                        android:visibility="gone"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/slide_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginRight="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/ic_like"
                    android:padding="12dp"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/top"
                android:background="@color/white"
                android:orientation="vertical">

                <org.lucasr.twowayview.widget.TwoWayView
                    android:id="@+id/list"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    app:twowayview_layoutManager="ListLayoutManager"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Current Location: "
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/current_location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center|start"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Weight: "
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center|start"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="Work"
                    android:textColor="@color/red_200"
                    android:textSize="@dimen/abc_text_size_small_material"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Industry: "
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/industry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center|start"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Designation: "
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/designation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center|start"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Package: "
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/salary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center|start"
                        android:paddingTop="4dp"
                        android:singleLine="true"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"/>
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:paddingLeft="16dp"
                    android:paddingTop="16dp"
                    android:text="Education"
                    android:textColor="@color/red_200"
                    android:textSize="@dimen/abc_text_size_small_material"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:gravity="center|start"
                        android:paddingLeft="16dp"
                        android:paddingTop="4dp"
                        android:text="Education: "
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/education"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:gravity="center|start"
                        android:lineSpacingExtra="2dp"
                        android:maxLines="3"
                        android:paddingTop="4dp"
                        android:textColor="@color/black_dark"
                        android:textSize="@dimen/abc_text_size_small_material"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/view_full_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:drawableLeft="@drawable/ic_assignment_red"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_assignment_red"
                android:gravity="center"
                android:paddingBottom="16dp"
                android:paddingTop="16dp"
                android:text="View Full Profile"
                android:textColor="@color/red_400"
                android:textSize="@dimen/abc_text_size_medium_material"
                android:textStyle="bold"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/bottom_panel"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_up_arrow"/>
        </LinearLayout>
    </RelativeLayout>
</com.sothree.slidinguppanel.SlidingUpPanelLayout>