<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/grey_100"
              android:orientation="vertical"
              android:padding="16dp">

    <com.mandaptak.android.Views.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Enter Mobile Number of Person"
        android:textColor="@color/black_light"
        android:textSize="16sp"/>

    <com.mandaptak.android.Views.ExtendedEditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:digits="0123456789"
        android:hint="xxx-xxx-xxxx"
        android:imeOptions="actionNext"
        android:inputType="number"
        android:maxLength="10"
        android:padding="12dp"/>

    <com.mandaptak.android.Views.TypefaceTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="Relation of Person with Bachelor"
        android:textColor="@color/black_light"
        android:textSize="16sp"/>

    <Spinner
        android:id="@+id/relations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="0dp"/>

    <com.mandaptak.android.Views.TypefaceTextView
        android:id="@+id/credit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:text="10 Credits"
        android:textColor="@color/black_light"
        android:textSize="16sp"/>

    <com.appyvet.rangebar.RangeBar
        android:id="@+id/user_credits_seek"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:rangeBar="false"
        custom:barColor="@color/red_300"
        custom:connectingLineColor="@color/red_300"
        custom:pinColor="@color/red_300"
        custom:selectorColor="@color/red_300"
        custom:textColor="@color/white"
        custom:tickColor="@color/transparent"
        custom:tickEnd="500"
        custom:tickInterval="20"
        custom:tickStart="10"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/give_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@color/red_400"
        android:text="Create new user"
        android:textColor="@color/white"/>
</LinearLayout>