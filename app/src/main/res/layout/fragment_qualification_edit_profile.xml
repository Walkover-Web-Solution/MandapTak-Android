<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mandaptak.android.EditProfile.QualificationEditProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Work"
            android:textColor="@color/black_light"
            android:textSize="@dimen/abc_text_size_small_material"/>

        <LinearLayout
            android:id="@+id/work_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>

        <TextView
            android:id="@+id/work_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:clickable="true"
            android:padding="16dp"
            android:text="+more"
            android:textColor="@color/red_700"
            android:textSize="@dimen/abc_text_size_button_material"/>

        <EditText
            android:id="@+id/current_income"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="1234567890"
            android:hint="Current Income"
            android:imeOptions="actionNext"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/black_dark"
            android:textColorHint="@color/black_light"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Education"
            android:textColor="@color/black_light"
            android:textSize="@dimen/abc_text_size_small_material"/>

        <LinearLayout
            android:id="@+id/education_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>

        <TextView
            android:id="@+id/education_more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|end"
            android:clickable="true"
            android:padding="16dp"
            android:text="+more"
            android:textColor="@color/red_700"
            android:textSize="@dimen/abc_text_size_button_material"/>

        <TextView
            android:id="@+id/work_after_marriage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:padding="16dp"
            android:text="Want to work after marriage?"
            android:textColor="@color/black_light"/>
    </LinearLayout>
</ScrollView>